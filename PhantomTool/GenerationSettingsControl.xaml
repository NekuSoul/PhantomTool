<UserControl x:Class="NekuSoul.PhantomTool.GenerationSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NekuSoul.PhantomTool"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <StackPanel>
        <Label>Amount:</Label>
        <DockPanel>
            <xctk:IntegerUpDown Name="AmountIntegerUpDown" DockPanel.Dock="Right" Minimum="1" Maximum="250" Width="45" HorizontalContentAlignment="Right" Value="90" ValueChanged="AmountIntegerUpDown_ValueChanged"/>
            <Slider Name="AmountSlider" Minimum="1" Maximum="250" Value="90" SmallChange="1" LargeChange="10" IsSnapToTickEnabled="True" ValueChanged="AmountSlider_ValueChanged" TickPlacement="Both"/>
        </DockPanel>
        <Label>Sets:</Label>
        <xctk:CheckListBox Name="SetCheckListBox" HorizontalContentAlignment="Stretch"/>
        <Label>Seed:</Label>
        <TextBox Name="SeedTextBox"/>
    </StackPanel>
</UserControl>
